{% extends 'base.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-12">
                <h1>Личный кабинет</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-2">
                {{ knp_menu_render('profile_menu', {'template': 'menu/profile/profile.html.twig'}) }}
            </div>
            <div class="col-md-12 mb-2">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <b>{{ user.name.full }}</b><a href="{{ url('profile.name') }}" class="btn btn-sm btn-info">Изменить</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-2">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        {% if user.email %}
                            <b>{{ user.email.value }}</b><a href="{{ url('profile.email') }}" class="btn btn-sm btn-info">Изменить</a>
                        {% else %}
                            <a href="{{ url('profile.email') }}" class="btn btn-sm btn-info">Добавить email</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
