{% extends 'base.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-12">
                <h1>Личный кабинет</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-2">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link text-info" href="{{ url('profile') }}">Профиль</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bg-info active" href="{{ url('profile.social') }}">Социальные сети</a>
                    </li>
                </ul>
            </div>

            {% if user.networks %}
                {% for network in user.networks %}
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <form
                                        action="{{ url('profile.oauth.detach', {network: network.network, identity: network.identity}) }}"
                                        method="post"
                                        onsubmit="return confirm('Вы уверены?')"
                                >
                                    <input type="hidden" name="_method" value="DELETE" />
                                    <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
                                    <button type="submit" class="btn btn-sm btn-danger">Отключить Facebook</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <a href="{{ path('profile.oauth.facebook') }}" class="btn btn-sm btn-info">Подключить Facebook</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
